<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>$(AssemblyName)</Title>
    <Authors>JinZeping</Authors>
    <Company />
    <Description>BigEndianBitConverter is a .NET Standard 2.0 library that provides utilities for converting between various data types and their big-endian byte representations. This library is particularly useful for applications that require consistent byte order across different platforms and systems, such as network protocols and file formats.</Description>
    <Copyright>This library is licensed under the MIT License.</Copyright>
    <PackageProjectUrl>https://github.com/JinZeping/BigEndianBitConverter</PackageProjectUrl>
    <RepositoryUrl>https://github.com/JinZeping/BigEndianBitConverter</RepositoryUrl>
  </PropertyGroup>

</Project>
